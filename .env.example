# Example environment variables for the entire project
# Copy this file to .env and fill in your actual credentials

# =====================
# BACKEND CONFIGURATION
# =====================

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/logistics_db
MONGODB_DB_NAME=logistics_db

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800
JWT_SECRET_KEY=your-jwt-secret-here

# Email
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS S3
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret

# Third-party APIs
GOOGLE_MAPS_API_KEY=your-key
STRIPE_API_KEY=your-key
TWILIO_ACCOUNT_SID=your-sid

# =====================
# FRONTEND CONFIGURATION
# =====================

# API
VITE_API_BASE_URL=http://localhost:8000/api
VITE_BACKEND_URL=http://localhost:8000

# Keys
VITE_GOOGLE_MAPS_API_KEY=your-key
VITE_STRIPE_PUBLIC_KEY=your-key
